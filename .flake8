[flake8]
exclude =
    .venv,
    .git,
    __pycache__,
    migrations,
    settings
ignore = E402,E501, W503
filename = *.py
max-complexity = 12
accept-encodings=utf-8
max-line-length = 88
multiline-quotes = double
inline-quotes = single
per-file-ignores =
    crm/config/settings/*:F405 F403 F401 E265 E262
